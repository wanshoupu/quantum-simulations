{
  "type": "object",
  "properties": {
    "source": {
      "type": "string"
    },
    "output": {
      "type": "string",
      "default": "a.out"
    },
    "optimization": {
      "type": "string",
      "enum": [
        "O0",
        "O1",
        "O2",
        "O3"
      ]
    },
    "debug": {
      "type": "boolean"
    },
    "warnings": {
      "type": "object",
      "properties": {
        "all": {
          "type": "boolean"
        },
        "as_errors": {
          "type": "boolean"
        }
      }
    },
    "device": {
      "type": "object",
      "properties": {
        "dimension": {
          "type": "integer"
        }
      },
      "required": [
        "dimension"
      ]
    },
    "target": {
      "type": "string",
      "enum": [
        "CIRQ",
        "QISKIT",
        "QUIMB"
      ]
    },
    "emit": {
      "type": "string",
      "enum": [
        "CLIFFORD_T",
        "UNIV_GATE",
        "SINGLET",
        "TWO_LEVEL",
        "NDARRAY"
      ]
    },
    "dump_ir": {
      "type": "boolean"
    }
