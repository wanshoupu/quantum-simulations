{
  "type": "object",
  "properties": {
    "source": {
      "type": "string"
    },
    "output": {
      "type": "string",
      "default": "a.out"
    },
    "optimization": {
      "type": "string",
      "enum": [
        "O0",
        "O1",
        "O2",
        "O3"
      ]
    },
    "debug": {
      "type": "boolean"
    },
    "warnings": {
      "type": "object",
      "properties": {
        "all": {
          "type": "boolean"
        },
        "as_errors": {
          "type": "boolean"
        }
      }
    },
    "device": {
      "type": "object",
      "properties": {
        "dimension": {
          "type": "integer"
        },
        "arange": {
          "type": "array",
          "items": {
            "type": "integer",
            "exclusiveMinimum": 0
          },
          "minItems": 2,
          "maxItems": 2
        }
      },
      "required": [
        "dimension"
      ]
    },
    "target": {
      "type": "string",
      "enum": [
        "CIRQ",
        "QISKIT",
        "QUIMB"
      ]
    },
    "emit": {
      "type": "string",
      "enum": [
        "UNITARY",
        "TWO_LEVEL",
        "SINGLET",
        "MULTI_TARGET",
        "TWO_CTRL",
        "ONE_CTRL",
        "UNIV_GATE",
        "CLIFFORD_T"
      ]
    },
    "rtol": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "atol": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "dump_ir": {
      "type": "boolean"
    }
  },
  "required": [
    "source",
    "device"
  ]
}
